{
  "$schema": "https://json.schemastore.org/nest-cli",
  "generateOptions": {
    "spec": false
  },
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "plugins": ["@nestjs/swagger"],
    "assets": ["**/*.env"]
  }
}
